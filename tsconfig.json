{
  "compilerOptions": {
    "sourceMap": true,
    "jsx": "react",
    "allowJs": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "lib": [ "ES2015", "DOM" ]
  },
  "exclude": ["node_modules", "**/*.test.ts"],
  "include": [
    "./src/**/*"
  ]
}
